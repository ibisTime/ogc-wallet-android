<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/fragment_user2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/arc_bg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/status_bar_height"
            android:gravity="center"
            android:text="@string/main_tab_my"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:layout_weight="1"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img_logo"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/user_logo" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linLayout_nick_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_nick_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            tools:text="哈哈哈" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="9dp"
                                android:layout_height="12dp"
                                android:background="@drawable/phone" />

                            <TextView
                                android:id="@+id/tv_phone_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:text="&#12288;&#12288;&#12288;&#12288;&#12288;"
                                android:textColor="@color/white"
                                android:textSize="14sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/linLayout_user_account"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_security" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/accounts_and_security"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line_jinmi_money"
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/ll_jinmi_money"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@mipmap/icon_jinmi_money" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="金米钱包"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_friends"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_friends" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/user_my_friends"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line_friends"
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/linLayout_invite"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_invite" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/invite_gift"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line_jinmi_fraction"
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/ll_jinmi_fraction"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@mipmap/icon_jinmi_fufen" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="金米福分"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/user_fragment_card_cornerradius"
                    app:cardElevation="@dimen/user_fragment_card_elevation"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/join_us"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_join" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/user_join"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line_join_us"
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/helper"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="16dp"
                                android:src="@drawable/user_help" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/user_issue"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                        <View
                            android:id="@+id/line_helper"
                            style="@style/style_split_line"
                            android:layout_marginLeft="48dp" />

                        <LinearLayout
                            android:id="@+id/setting"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/user_fragment_item_img_width"
                                android:layout_height="@dimen/user_fragment_item_img_height"
                                android:layout_marginLeft="15dp"
                                android:src="@drawable/user_set" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:text="@string/setting"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="15dp"
                                android:background="@mipmap/more" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</layout>
